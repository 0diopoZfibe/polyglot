{
  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src",
    "vite.config.ts",
    "package.json",
    "electron"
  ],
  "dir": "./",
  "paths": {
    "@/*": ["src/*"]
  }
}
